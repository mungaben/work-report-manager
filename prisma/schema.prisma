// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  name     String
  email    String   @unique
  password String

  Reports  Report[]
}

model Report {
  id            String  @id @default(uuid())
  Basis2        Int
  Interface     Int
  cms           Int
  spms          Int
  newperpay     Int
  oldperpay     Int
  utilitymaster Int
  internet      Int
  exchangemail  Int
  comments      String?
  author        User?   @relation(fields: [authorId], references: [id])
  authorId      String?
}

enum Role {
  USER
  ADMIN
}
